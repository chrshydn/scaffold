{
  "name": "scaffold-structure-map",
  "displayName": "Scaffold - Structure Map",
  "description": "Live structural map of React/React Native TypeScript codebases",
  "version": "0.1.2",
  "publisher": "chrshydn",
  "icon": "media/scaffold-icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/scaffold/scaffold-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "react",
    "react-native",
    "typescript",
    "codebase",
    "structure",
    "imports",
    "dependencies"
  ],
  "activationEvents": [
    "workspaceContains:**/package.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scaffold",
          "title": "Scaffold",
          "icon": "media/scaffold-icon.svg"
        }
      ]
    },
    "views": {
      "scaffold": [
        {
          "type": "webview",
          "id": "scaffold.structureView",
          "name": "Structure Map",
          "icon": "media/scaffold-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "scaffold.refresh",
        "title": "Scaffold: Refresh Structure Map",
        "icon": "$(refresh)"
      },
      {
        "command": "scaffold.showFileMetrics",
        "title": "Scaffold: Show File Metrics",
        "icon": "$(info)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "scaffold.refresh",
          "when": "view == scaffold.structureView",
          "group": "navigation",
          "icon": "$(refresh)"
        }
      ],
      "explorer/context": [
        {
          "command": "scaffold.showFileMetrics",
          "when": "resourceExtname == .ts || resourceExtname == .tsx",
          "group": "scaffold"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {}
}
